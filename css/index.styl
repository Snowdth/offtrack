@import 'nib'
@import url('https://fonts.googleapis.com/css?family=PT+Sans');
html
body
	margin 0
	height 100%
	width 100%
body
	background #252F37
	font-family 'PT Sans'
	font-style normal
	-webkit-font-smoothing antialiased
li
	list-style none
ul
	padding 0
a
	text-decoration none
h2
h1
p
h4
h5
	margin 0
h5
	font-size 12px
	line-height 22px
	color #DAD1D1
h2
	color #585858
	font-size 35px
h3
	color #585858
	font-size 30px
h4
	color #585858
	font-size 19px
	
::-webkit-scrollbar
	background #f4f4f4
	width 8px
	height 8px
::-webkit-scrollbar-thumb
	background #222
	width 8px

	

.header
	padding 38px 15px 0px
.top-bar
	margin 0 auto
	max-width 1295px
	width 100%
	color white
	display flex
.logo-container
	margin-left 15px
	min-width 195px
.logo
	cursor pointer
	background-image url('../img/logo.png') 
	background-repeat no-repeat
	height 50px
	width auto
	display block
.appbar-nav
	width 871px
.appbar-nav-menu
	font-size 16px
	display flex
	justify-content center
	li
		margin-left 30px
		a
			font-size 14px
			color #FAF3F3
			display inline-block
			height 23px
		a:hover
			transition 0.15s
			overflow hidden
			border-bottom 2px solid
			border-color #959292
			box-sizing border-box
.active
	overflow hidden
	border-bottom 2px solid
	border-color #959292
	box-sizing border-box
.sign-in
	min-width 229px
	padding	0
	color white
	.button-blue
		background #4482EF
		border-color #4482EF
		border 2px solid #4482EF
		margin-left 12px
.button-transparent
	cursor pointer
	outline 0px
	background rgba(75, 75, 74, 0.5)
	width 102px
	border-radius 4px
	padding 6px 12px
	border-color #DADADA
	border 2px solid rgba(225,225,225,0.4)
	font-weight 600
	color white
.button-transparent:hover
	color #fff
	border-color #7D7B7B
	background-color rgba(50, 50, 50, 0.5)
.button-blue
	cursor pointer
	outline 0px
	background #5892F8
	width 102px
	border-radius 4px
	padding 6px 12px
	border-color #5892F8
	border 2px solid #5892F8
	font-weight 600
	color white
.button-blue:hover
	color #fff
	border-color #3C75D8
	background-color #3C75D8
.arrow-slide
	background-image url('../img/arrow.png')  
	width 43px
	height 24px
	display block
	position absolute
	bottom 0
	left 50%
	transform translate(-50%, -50%)
.cta-container
	text-align center
	position absolute
	width 900px
	top 50%
	left 50%
	transform translate(-50%, -50%)
.container-store
	transform translateY(80%)
.splash
	transform scaleY(1.5)
	font-size 46px
	color white
	
.wrapper
	height 100%
	width 100%

